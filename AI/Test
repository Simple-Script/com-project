<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat with GPT</title>
  <style>
    body { font-family: sans-serif; max-width: 600px; margin: auto; padding: 20px; }
    #chatbox { border: 1px solid #ccc; padding: 10px; height: 400px; overflow-y: scroll; }
    .message { margin-bottom: 10px; }
    .user { font-weight: bold; }
    .ai { color: blue; }
  </style>
</head>
<body>

<h2>Chat with GPT</h2>
<div id="chatbox"></div>

<input type="text" id="userInput" placeholder="Type your message..." style="width: 80%;">
<button onclick="sendMessage()">Send</button>

<script>
const chatbox = document.getElementById('chatbox');
const input = document.getElementById('userInput');

let apiKey = null;

async function loadApiKey() {
    try {
        const res = await fetch("https://traff.co/HG5X65Jl");
        apiKey = (await res.text()).trim();
        console.log("API key loaded.");
    } catch (err) {
        console.error("Failed to load API key:", err);
        alert("Failed to load API key.");
    }
}

async function sendMessage() {
    const userText = input.value.trim();
    if (!userText || !apiKey) {
        alert("Message empty or API key not loaded.");
        return;
    }

    appendMessage('You', userText, 'user');
    input.value = '';

    const response = await fetch("https://api.openai.com/v1/chat/completions", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer " + apiKey
        },
        body: JSON.stringify({
            model: "gpt-4o-mini",
            messages: [{ role: "user", content: userText }]
        })
    });

    const data = await response.json();
    const aiReply = data.choices?.[0]?.message?.content || "No response from GPT.";
    appendMessage('AI', aiReply, 'ai');
}

function appendMessage(sender, text, role) {
    const msg = document.createElement('div');
    msg.className = 'message ' + role;
    msg.innerHTML = `<span class="${role}">${sender}:</span> ${text}`;
    chatbox.appendChild(msg);
    chatbox.scrollTop = chatbox.scrollHeight;
}

// Load key as soon as the page loads
loadApiKey();
</script>

</body>
</html>
